#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#include "keymap_definitions.h"

/ {
    behaviors {
        btm: balanced_tap_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "CTRL_SPACE_TAP";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };
    };
};

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
			bindings = <LAYER_ALPHAS>;
		};

		amod_layer {
		    bindings = <LAYER_ALT_MODS>;
		};

		func_layer {
		   bindings = <LAYER_FUNC>;
		};

		num_layer {
		   bindings = <LAYER_NUM>;
		};

		sym_layer {
			bindings = <LAYER_SYM>;
		};

		nav_layer {
			bindings = <LAYER_NAV>;
		};
	};
};
